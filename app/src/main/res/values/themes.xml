        <item name="android:textColorHint">@color/silver</item>
    </style>


    <style name="App.Button.BorderLess" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="cornerRadius">@dimen/radius_small</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="rippleColor">@color/gray_ripple</item>
        <item name="android:fontFamily">@font/font_extra_bold</item>
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:minHeight">@dimen/size_button_medium</item>
    </style>

    <style name="App.Button.Orange" parent="App.Button.BorderLess">
        <item name="android:fontFamily">@font/font_extra_bold</item>
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:textColor">@color/white</item>
